<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kmitl.lab09.supanat.moneyflow.AddActivity"
    >

    <TextView
        android:id="@+id/textType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:text="ประเภท"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonIncome"
        android:layout_width="176dp"
        android:layout_height="48dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp"
        android:background="#333333"
        android:onClick="onIncome"
        android:text="รายรับ"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="@+id/textType"
        app:layout_constraintTop_toBottomOf="@+id/textType" />

    <Button
        android:id="@+id/buttonExpence"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:background="#333333"
        android:onClick="onOutcome"
        android:text="รายจ่าย"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toRightOf="@+id/buttonIncome"
        app:layout_constraintTop_toTopOf="@+id/buttonIncome" />

    <TextView
        android:id="@+id/textlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp"
        android:text="รายการ"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonIncome"
        app:layout_constraintTop_toBottomOf="@+id/buttonIncome" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="351dp"
        android:layout_height="49dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/textlist"
        app:layout_constraintTop_toBottomOf="@+id/textlist" />

    <TextView
        android:id="@+id/textMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp"
        android:text="จำนวนเงิน"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="351dp"
        android:layout_height="49dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/textMoney"
        app:layout_constraintTop_toBottomOf="@+id/textMoney" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimary"
        android:onClick="onSave"
        android:text="บันทึก"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="@+id/editText2"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />
</android.support.constraint.ConstraintLayout>
