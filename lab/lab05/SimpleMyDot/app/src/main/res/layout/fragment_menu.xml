<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kmitl.lab04.supanat.simplemydot.fragment.MenuFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_bright">


        <TextView
            android:id="@+id/showradius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radius"
            android:textSize="24sp"
            app:layout_constraintRight_toLeftOf="@+id/save"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="89dp"
            app:layout_constraintBottom_toBottomOf="@+id/editradius"
            android:layout_marginEnd="88dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            android:layout_marginLeft="89dp"
            android:layout_marginRight="88dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="-2dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="24sp"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/editx"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="-2dp" />

        <TextView
            android:id="@+id/showy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:textSize="24sp"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/edity"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="-4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <EditText
            android:id="@+id/edity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintRight_toLeftOf="@+id/showradius"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/cancel"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/editx"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="4dp"
            app:layout_constraintLeft_toRightOf="@+id/showy"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/editradius"
            android:layout_width="79dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            app:layout_constraintRight_toRightOf="@+id/save"
            app:layout_constraintBaseline_toBaselineOf="@+id/save"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/editx"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            app:layout_constraintHorizontal_bias="1.0" />

        <EditText
            android:id="@+id/editx"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/showradius"
            app:layout_constraintRight_toRightOf="@+id/edity"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/edity"
            app:layout_constraintTop_toTopOf="@+id/editradius"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btncancel"
            android:text="cancel"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/save"
            app:layout_constraintTop_toBottomOf="@+id/save"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/save"
            android:layout_marginTop="3dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnsave"
            android:text="Save"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="16dp" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
